<h2> Log a new song! </h2>

<% if flash[:errors] %>
  <ul>
      <% flash[:errors].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
  </ul>
<% end %> 

<%= form_for @song do |f| %>
   <%= f.label :title, "Title: " %>
   <%= f.text_field :title %>
   <%= f.label :released, "Released?: " %>
   <%= f.check_box :released %>
   <%= f.label :release_year, "Release Year: " %>
   <%= f.number_field :release_year %>
   <%= f.label :artist_name %>
   <%= f.text_field :artist_name %>
   <%= f.label :genre %>
   <%= f.text_field :genre %>
   <%= f.submit "Okay!!" %>
<% end %>